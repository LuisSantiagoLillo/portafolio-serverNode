 <!-- CONTACT -->
    <div class="container-fluid mt-4" id="contact">
        <div class="row">
            <div class="col">
                <div class="map">
                    <div id="googleMap" style="width:100%; height:400px;">
                        <p id="mensaje_error"></p>
                    </div>
                    <script>
                        function initMap() {
                            var madrid = {
                                lat: 40.412633,
                                lng: -3.718322
                            };
                            var map = new google.maps.Map(document.getElementById('googleMap'), {
                                zoom: 14,
                                center: madrid
                            });
                            var marker = new google.maps.Marker({
                                position: madrid,
                                map: map
                            });
                        }
                    </script>
                    <!-- LLAMA AL API KEY DEL MAPA INTERACTIVO EJECUTADO EN EL JS -->
                    <!-- AIzaSyCEK0Un_V9ib9RyulE9f3I3dh01_VheOeE -->
                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCEK0Un_V9ib9RyulE9f3I3dh01_VheOeE&callback=initMap" async defer></script>

                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center justify-content-center" id="details">
                <figure class="figure">
                    <img src="img/avatar_friki.png" class="rounded" alt="Cinque Terre">
                    <figcaption class="figure-caption d-flex align-items-center justify-content-center mt-3">
                        <button class="btn btn-outline-success mr-1"><i class="icono icon-linkedin-1"></i></button>
                        <button class="btn btn-outline-success mr-1"><i class="icono icon-facebook mr-1"></i></button>
                        <button class="btn btn-outline-success mr-1"><i class="icono icon-terminal mr-1"></i></button>
                        <button class="btn btn-outline-success mr-1"><i class="icono icon-heart mr-1"></i></button>

                    </figcaption>
                </figure>
            </div>
            <div class="col-12 col-sm-6 pr-5 pb-3" id="form_contact">
                <form action="">
                    <div class="form-group">
                        <input class="form-control mb-3" type="text" name="name" id="name" placeholder="Name" required>
                        <input class="form-control mb-3" type="email" name="email" id="email" placeholder="Email" required>
                        <input class="form-control mb-3" type="phone" name="phone" id="phone" placeholder="Phone" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="message" id="message" cols="30" rows="10" placeholder="Message" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-success btn-lg btn-block">SEND</button>
                    </div>
                </form>
            </div>
        </div>
    </div>